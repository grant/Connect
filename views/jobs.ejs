<%- include("partials/headerjobs") %>

<h1>Start Applying Today!</h1>
<div class="container">
    <div class="jobList">
        <div class="scrollableContent">
            <% jobs.forEach(function(job){ %>
                <div class="jobMin">
                    <span class="dot"></span>
                    <div class="jobInfo">
                        <i class="fa fa-heart" aria-hidden="true"></i>
                        <div class="title"><%= job.positionTitle %></div>
                        <h3><%= job.companyName %> | <%= job.positionLocation %></h3>
                        <div class="row">
                            <div class="column">
                                <h6>Start: <%= job.startDate %></h6>
                                <h6>Job Type: <%= job.jobType %></h6>
                            </div>
                            <div class="column">
                                <h6>Education: <%= job.education %></h6>
                                <h6>Major: <%= job.major %></h6>
                            </div>
                        </div>
                        <hr>
                        <h6 id="datePosted">posted: <span><%= job.datePosted.toDateString() %></span></h6>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="job">
        <div class="scrollableContent">
            <p>one job info</p> 
            <!-- More specific info about one job -->
        </div>
    </div>
</div>


<%- include("partials/footer") %>